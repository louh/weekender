{
  "name": "weekender",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "repository": "https://github.com/louh/weekender",
  "scripts": {
    "clean": "rm -rf ./.cache && rm -rf ./dist && mkdir dist && touch ./dist/.gitkeep",
    "test": "jest",
    "copy-images": "cp -R ./tiles ./dist/ && cp -R ./test/fixtures ./dist/ && cp ./src/images/thumbnail.png ./dist/",
    "start": "npm run copy-images && parcel src/index.html --no-source-maps",
    "build": "npm run copy-images && parcel build src/index.html --no-source-maps"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "downshift": "3.2.12",
    "leaflet": "1.5.1",
    "leaflet-rastercoords": "1.0.3",
    "mta-subway-bullets": "0.4.1",
    "parcel-bundler": "1.12.3",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "sanitize-html": "1.20.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@testing-library/react": "9.1.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.2",
    "eslint": "6.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-config-standard-react": "8.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-standard": "4.0.0",
    "jest": "24.8.0",
    "react-test-renderer": "16.9.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslint": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-double"
      ]
    }
  },
  "jest": {
    "roots": [
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  }
}
